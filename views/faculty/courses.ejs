<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/Styles.css">
    <link rel="stylesheet" href="/css/Dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="mainContainer">
        <%- include('../partials/faculty-sidebar', { active: 'faculty-courses' }) %>

        <div class="content">
            <div class="page-header">
                <div>
                    <h1>My Courses</h1>
                    <p class="breadcrumb"><a href="/faculty/dashboard">Dashboard</a> / <a href="/faculty/courses">My Courses</a></p>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="search-box">
                    <span class="material-symbols-outlined">search</span>
                    <input type="text" placeholder="Search courses..." id="searchInput" onkeyup="filterCourses()">
                </div>
                <div class="filter-group">
                    <select id="departmentFilter" onchange="filterCourses()">
                        <option value="">All Departments</option>
                        <option value="Computer Science">Computer Science</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Mechanical">Mechanical</option>
                        <option value="Civil">Civil</option>
                    </select>
                    <select id="semesterFilter" onchange="filterCourses()">
                        <option value="">All Semesters</option>
                        <option value="1">Semester 1</option>
                        <option value="2">Semester 2</option>
                        <option value="3">Semester 3</option>
                        <option value="4">Semester 4</option>
                        <option value="5">Semester 5</option>
                        <option value="6">Semester 6</option>
                        <option value="7">Semester 7</option>
                        <option value="8">Semester 8</option>
                    </select>
                </div>
            </div>

            <!-- Course Cards -->
            <div class="courses-grid" id="coursesGrid">
                <% courses.forEach(function(course) { %>
                <div class="course-card" data-department="<%= course.department %>" data-semester="<%= course.semester %>">
                    <div class="course-header">
                        <div class="course-icon" style="background: <%= course.color %>;">
                            <span class="material-symbols-outlined"><%= course.icon %></span>
                        </div>
                        <div class="course-badge"><%= course.code %></div>
                    </div>
                    <div class="course-body">
                        <h3><%= course.name %></h3>
                        <p class="course-dept"><%= course.department %> - Semester <%= course.semester %></p>
                        <div class="course-stats">
                            <div class="stat-item">
                                <span class="material-symbols-outlined">groups</span>
                                <span><%= course.students %> Students</span>
                            </div>
                            <div class="stat-item">
                                <span class="material-symbols-outlined">schedule</span>
                                <span><%= course.schedule %></span>
                            </div>
                        </div>
                        <div class="course-progress">
                            <div class="progress-header">
                                <span>Course Progress</span>
                                <span><%= course.progress %>%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress" style="width: <%= course.progress %>%; background: <%= course.color %>;"></div>
                            </div>
                        </div>
                    </div>
                    <div class="course-footer">
                        <a href="/faculty/attendance?class=<%= course.classId %>&subject=<%= course.id %>" class="btn-primary btn-sm">
                            <span class="material-symbols-outlined">edit_calendar</span> Mark Attendance
                        </a>
                        <a href="/faculty/reports?course=<%= course.id %>" class="btn-secondary btn-sm">
                            <span class="material-symbols-outlined">assessment</span> View Reports
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>

            <!-- Empty State -->
            <div class="empty-state" id="emptyState" style="display: none;">
                <span class="material-symbols-outlined">search_off</span>
                <h3>No courses found</h3>
                <p>Try adjusting your search or filters</p>
            </div>
        </div>
    </div>

    <style>
        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }

        .course-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .course-header {
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
        }

        .course-icon {
            width: 60px;
            height: 60px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .course-icon .material-symbols-outlined {
            font-size: 30px;
            color: white;
        }

        .course-badge {
            background: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            color: #6b7280;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .course-body {
            padding: 20px;
        }

        .course-body h3 {
            font-size: 18px;
            font-weight: 600;
            color: #1a1a2e;
            margin: 0 0 8px 0;
        }

        .course-dept {
            font-size: 14px;
            color: #6b7280;
            margin: 0 0 15px 0;
        }

        .course-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #6b7280;
        }

        .stat-item .material-symbols-outlined {
            font-size: 18px;
            color: #9ca3af;
        }

        .course-progress {
            margin-top: 15px;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 13px;
            color: #6b7280;
        }

        .progress-header span:last-child {
            font-weight: 600;
            color: #1a1a2e;
        }

        .progress-bar {
            height: 8px;
            background: #f0f0f0;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar .progress {
            height: 100%;
            border-radius: 10px;
            transition: width 0.5s ease;
        }

        .course-footer {
            padding: 15px 20px;
            border-top: 1px solid #f0f0f0;
            display: flex;
            gap: 10px;
        }

        .course-footer .btn-primary,
        .course-footer .btn-secondary {
            flex: 1;
            justify-content: center;
            padding: 10px 15px;
            font-size: 13px;
        }

        .btn-sm {
            padding: 8px 16px !important;
            font-size: 13px !important;
        }

        .btn-sm .material-symbols-outlined {
            font-size: 16px !important;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
        }

        .empty-state .material-symbols-outlined {
            font-size: 64px;
            color: #d1d5db;
        }

        .empty-state h3 {
            font-size: 20px;
            color: #374151;
            margin: 15px 0 8px;
        }

        .empty-state p {
            color: #6b7280;
        }

        @media (max-width: 768px) {
            .courses-grid {
                grid-template-columns: 1fr;
            }

            .course-footer {
                flex-direction: column;
            }
        }
    </style>

    <script>
        function filterCourses() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const departmentValue = document.getElementById('departmentFilter').value;
            const semesterValue = document.getElementById('semesterFilter').value;
            const cards = document.querySelectorAll('.course-card');
            let visibleCount = 0;

            cards.forEach(card => {
                const text = card.textContent.toLowerCase();
                const dept = card.getAttribute('data-department');
                const semester = card.getAttribute('data-semester');
                
                const matchesSearch = text.includes(searchValue);
                const matchesDept = !departmentValue || dept === departmentValue;
                const matchesSemester = !semesterValue || semester === semesterValue;

                if (matchesSearch && matchesDept && matchesSemester) {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            document.getElementById('emptyState').style.display = visibleCount === 0 ? 'block' : 'none';
            document.getElementById('coursesGrid').style.display = visibleCount === 0 ? 'none' : 'grid';
        }
    </script>
</body>
</html>
