<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/Styles.css">
    <link rel="stylesheet" href="/css/Dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="mainContainer">
        <%- include('../partials/faculty-sidebar', { active: 'faculty-settings' }) %>

        <div class="content">
            <div class="page-header">
                <div>
                    <h1>Settings</h1>
                    <p class="breadcrumb"><a href="/faculty/dashboard">Dashboard</a> / <a href="/faculty/settings">Settings</a></p>
                </div>
            </div>

            <div class="settings-layout">
                <!-- Settings Navigation -->
                <div class="settings-nav">
                    <button class="settings-nav-item active" onclick="showSection('account')">
                        <span class="material-symbols-outlined">person</span>
                        <span>Account</span>
                    </button>
                    <button class="settings-nav-item" onclick="showSection('security')">
                        <span class="material-symbols-outlined">lock</span>
                        <span>Security</span>
                    </button>
                    <button class="settings-nav-item" onclick="showSection('notifications')">
                        <span class="material-symbols-outlined">notifications</span>
                        <span>Notifications</span>
                    </button>
                    <button class="settings-nav-item" onclick="showSection('attendance')">
                        <span class="material-symbols-outlined">fact_check</span>
                        <span>Attendance</span>
                    </button>
                    <button class="settings-nav-item" onclick="showSection('display')">
                        <span class="material-symbols-outlined">palette</span>
                        <span>Display</span>
                    </button>
                    <button class="settings-nav-item" onclick="showSection('about')">
                        <span class="material-symbols-outlined">info</span>
                        <span>About</span>
                    </button>
                </div>

                <!-- Settings Content -->
                <div class="settings-content">
                    <!-- Account Settings -->
                    <div class="settings-section active" id="account">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">person</span>
                                <h3>Account Information</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="account-profile">
                                    <div class="profile-avatar-large">
                                        <%= faculty.name.split(' ').map(n => n[0]).join('') %>
                                    </div>
                                    <div class="profile-info-main">
                                        <h2><%= faculty.name %></h2>
                                        <p><%= faculty.designation %> • <%= faculty.department %></p>
                                        <span class="badge-active">Active</span>
                                    </div>
                                </div>
                                
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Faculty ID</h4>
                                        <p>Your unique identifier</p>
                                    </div>
                                    <span class="setting-value"><%= faculty.id %></span>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Email Address</h4>
                                        <p>Primary email for communication</p>
                                    </div>
                                    <span class="setting-value"><%= faculty.email %></span>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Phone Number</h4>
                                        <p>Contact number</p>
                                    </div>
                                    <div class="editable-field">
                                        <input type="tel" id="phone" value="<%= faculty.phone %>" class="setting-input-wide">
                                        <button class="btn-edit" onclick="updateField('phone')">
                                            <span class="material-symbols-outlined">edit</span>
                                        </button>
                                    </div>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Department</h4>
                                        <p>Assigned department</p>
                                    </div>
                                    <span class="setting-value"><%= faculty.department %></span>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Joining Date</h4>
                                        <p>Date of joining institution</p>
                                    </div>
                                    <span class="setting-value"><%= faculty.joiningDate %></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Security Settings -->
                    <div class="settings-section" id="security">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">lock</span>
                                <h3>Security Settings</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Change Password</h4>
                                        <p>Update your account password</p>
                                    </div>
                                    <button class="btn-secondary" onclick="openPasswordModal()">
                                        <span class="material-symbols-outlined">key</span> Change Password
                                    </button>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Two-Factor Authentication</h4>
                                        <p>Add extra security to your account</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" id="twoFactor" onchange="toggle2FA()">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Login Alerts</h4>
                                        <p>Get notified of new login attempts</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Session Timeout</h4>
                                        <p>Auto logout after inactivity</p>
                                    </div>
                                    <select class="setting-select" id="sessionTimeout">
                                        <option value="15">15 minutes</option>
                                        <option value="30" selected>30 minutes</option>
                                        <option value="60">1 hour</option>
                                        <option value="120">2 hours</option>
                                        <option value="0">Never</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">history</span>
                                <h3>Recent Login Activity</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="login-activity-list">
                                    <% loginActivity.forEach(activity => { %>
                                    <div class="login-activity-item">
                                        <div class="activity-icon <%= activity.current ? 'current' : '' %>">
                                            <span class="material-symbols-outlined"><%= activity.device === 'Desktop' ? 'computer' : 'phone_android' %></span>
                                        </div>
                                        <div class="activity-details">
                                            <h4><%= activity.browser %> on <%= activity.device %> <% if (activity.current) { %><span class="badge-current">Current</span><% } %></h4>
                                            <p><%= activity.location %> • <%= activity.time %></p>
                                        </div>
                                        <% if (!activity.current) { %>
                                        <button class="btn-icon-small" title="Revoke session">
                                            <span class="material-symbols-outlined">close</span>
                                        </button>
                                        <% } %>
                                    </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notification Settings -->
                    <div class="settings-section" id="notifications">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">notifications</span>
                                <h3>Notification Preferences</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Email Notifications</h4>
                                        <p>Receive notifications via email</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked id="emailNotif">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Push Notifications</h4>
                                        <p>Enable browser push notifications</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" id="pushNotif">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">tune</span>
                                <h3>Notification Types</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Low Attendance Alerts</h4>
                                        <p>When students fall below <%= settings.warningThreshold %>%</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Daily Summary Report</h4>
                                        <p>Daily attendance summary at end of day</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Weekly Summary Report</h4>
                                        <p>Weekly attendance summary on weekends</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>System Announcements</h4>
                                        <p>Updates and maintenance notifications</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Schedule Reminders</h4>
                                        <p>Reminders before scheduled classes</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Attendance Settings -->
                    <div class="settings-section" id="attendance">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">fact_check</span>
                                <h3>Attendance Preferences</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Default Attendance Status</h4>
                                        <p>Default status when marking attendance</p>
                                    </div>
                                    <select class="setting-select" id="defaultStatus">
                                        <option value="present">Present (All marked present)</option>
                                        <option value="absent">Absent (All marked absent)</option>
                                        <option value="none" selected>None (Manual selection)</option>
                                    </select>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Auto-Save Attendance</h4>
                                        <p>Automatically save attendance periodically</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" id="autoSave">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Confirm Before Saving</h4>
                                        <p>Show confirmation dialog before saving</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked id="confirmSave">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Quick Mark Mode</h4>
                                        <p>Single tap to toggle attendance status</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked id="quickMark">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">info</span>
                                <h3>Institution Rules (Read Only)</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="rules-grid">
                                    <div class="rule-item">
                                        <span class="material-symbols-outlined">school</span>
                                        <div>
                                            <h4>Academic Year</h4>
                                            <p><%= settings.academicYear %></p>
                                        </div>
                                    </div>
                                    <div class="rule-item">
                                        <span class="material-symbols-outlined">percent</span>
                                        <div>
                                            <h4>Minimum Attendance</h4>
                                            <p><%= settings.minAttendance %>%</p>
                                        </div>
                                    </div>
                                    <div class="rule-item">
                                        <span class="material-symbols-outlined">warning</span>
                                        <div>
                                            <h4>Warning Threshold</h4>
                                            <p><%= settings.warningThreshold %>%</p>
                                        </div>
                                    </div>
                                    <div class="rule-item">
                                        <span class="material-symbols-outlined">schedule</span>
                                        <div>
                                            <h4>Late Threshold</h4>
                                            <p><%= settings.lateThreshold %> minutes</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Display Settings -->
                    <div class="settings-section" id="display">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">palette</span>
                                <h3>Appearance</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Theme</h4>
                                        <p>Select your preferred theme</p>
                                    </div>
                                    <div class="theme-options">
                                        <label class="theme-option selected">
                                            <input type="radio" name="theme" value="light" checked>
                                            <span class="theme-preview light"><span class="material-symbols-outlined">light_mode</span></span>
                                            <span>Light</span>
                                        </label>
                                        <label class="theme-option">
                                            <input type="radio" name="theme" value="dark">
                                            <span class="theme-preview dark"><span class="material-symbols-outlined">dark_mode</span></span>
                                            <span>Dark</span>
                                        </label>
                                        <label class="theme-option">
                                            <input type="radio" name="theme" value="auto">
                                            <span class="theme-preview auto"><span class="material-symbols-outlined">brightness_auto</span></span>
                                            <span>Auto</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Compact Mode</h4>
                                        <p>Use smaller spacing and fonts</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" id="compactMode">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Sidebar Collapsed</h4>
                                        <p>Start with collapsed sidebar</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" id="sidebarCollapsed">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">table_chart</span>
                                <h3>Table & List Settings</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Show Student Photos</h4>
                                        <p>Display photos in attendance list</p>
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked id="showPhotos">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Rows Per Page</h4>
                                        <p>Number of rows in tables</p>
                                    </div>
                                    <select class="setting-select" id="rowsPerPage">
                                        <option value="10">10</option>
                                        <option value="25" selected>25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Date Format</h4>
                                        <p>How dates are displayed</p>
                                    </div>
                                    <select class="setting-select" id="dateFormat">
                                        <option value="dd-mm-yyyy" selected>DD-MM-YYYY</option>
                                        <option value="mm-dd-yyyy">MM-DD-YYYY</option>
                                        <option value="yyyy-mm-dd">YYYY-MM-DD</option>
                                    </select>
                                </div>
                                <div class="setting-item">
                                    <div class="setting-info">
                                        <h4>Time Format</h4>
                                        <p>12-hour or 24-hour format</p>
                                    </div>
                                    <select class="setting-select" id="timeFormat">
                                        <option value="12" selected>12 Hour (AM/PM)</option>
                                        <option value="24">24 Hour</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- About Section -->
                    <div class="settings-section" id="about">
                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">info</span>
                                <h3>About System</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="about-logo">
                                    <div class="logo-icon">
                                        <span class="material-symbols-outlined">school</span>
                                    </div>
                                    <div class="logo-text">
                                        <h2><%= settings.institutionName %></h2>
                                        <p>Attendance Management System</p>
                                    </div>
                                </div>

                                <div class="about-info-grid">
                                    <div class="about-info-item">
                                        <span class="material-symbols-outlined">badge</span>
                                        <div>
                                            <h4>Version</h4>
                                            <p>2.0.0</p>
                                        </div>
                                    </div>
                                    <div class="about-info-item">
                                        <span class="material-symbols-outlined">calendar_month</span>
                                        <div>
                                            <h4>Last Updated</h4>
                                            <p>February 25, 2026</p>
                                        </div>
                                    </div>
                                    <div class="about-info-item">
                                        <span class="material-symbols-outlined">domain</span>
                                        <div>
                                            <h4>Institution</h4>
                                            <p><%= settings.institutionName %></p>
                                        </div>
                                    </div>
                                    <div class="about-info-item">
                                        <span class="material-symbols-outlined">mail</span>
                                        <div>
                                            <h4>Support Email</h4>
                                            <p><%= settings.supportEmail %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="info-card">
                            <div class="info-card-header">
                                <span class="material-symbols-outlined">help</span>
                                <h3>Help & Support</h3>
                            </div>
                            <div class="info-card-body">
                                <div class="help-links">
                                    <a href="#" class="help-link">
                                        <span class="material-symbols-outlined">description</span>
                                        <span>User Guide</span>
                                    </a>
                                    <a href="#" class="help-link">
                                        <span class="material-symbols-outlined">video_library</span>
                                        <span>Video Tutorials</span>
                                    </a>
                                    <a href="#" class="help-link">
                                        <span class="material-symbols-outlined">quiz</span>
                                        <span>FAQs</span>
                                    </a>
                                    <a href="#" class="help-link">
                                        <span class="material-symbols-outlined">support_agent</span>
                                        <span>Contact Support</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Save Button -->
                    <div class="settings-actions">
                        <button class="btn-secondary" onclick="resetSettings()">
                            <span class="material-symbols-outlined">restart_alt</span> Reset to Defaults
                        </button>
                        <button class="btn-primary" onclick="saveSettings()">
                            <span class="material-symbols-outlined">save</span> Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal" id="passwordModal">
        <div class="modal-content" style="max-width: 450px;">
            <div class="modal-header">
                <h2><span class="material-symbols-outlined">key</span> Change Password</h2>
                <button class="close-btn" onclick="closePasswordModal()">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Current Password</label>
                    <div class="password-input-wrapper">
                        <input type="password" id="currentPassword" placeholder="Enter current password">
                        <button type="button" class="toggle-password" onclick="togglePasswordVisibility('currentPassword')">
                            <span class="material-symbols-outlined">visibility</span>
                        </button>
                    </div>
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    <div class="password-input-wrapper">
                        <input type="password" id="newPassword" placeholder="Enter new password" oninput="checkPasswordStrength()">
                        <button type="button" class="toggle-password" onclick="togglePasswordVisibility('newPassword')">
                            <span class="material-symbols-outlined">visibility</span>
                        </button>
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar"></div>
                        <span class="strength-text">Password strength</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Confirm New Password</label>
                    <div class="password-input-wrapper">
                        <input type="password" id="confirmPassword" placeholder="Confirm new password">
                        <button type="button" class="toggle-password" onclick="togglePasswordVisibility('confirmPassword')">
                            <span class="material-symbols-outlined">visibility</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" onclick="closePasswordModal()">Cancel</button>
                <button class="btn-primary" onclick="changePassword()">
                    <span class="material-symbols-outlined">check</span> Update Password
                </button>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast" id="toast">
        <span class="material-symbols-outlined toast-icon">check_circle</span>
        <span class="toast-message">Settings saved successfully!</span>
    </div>

    <style>
        .settings-layout {
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 25px;
        }

        .settings-nav {
            background: white;
            border-radius: 16px;
            padding: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            height: fit-content;
            position: sticky;
            top: 100px;
        }

        .settings-nav-item {
            width: 100%;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            border: none;
            background: transparent;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 500;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: left;
        }

        .settings-nav-item:hover {
            background: #f3f4f6;
            color: #374151;
        }

        .settings-nav-item.active {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(99, 102, 241, 0.1) 100%);
            color: #8b5cf6;
        }

        .settings-nav-item .material-symbols-outlined {
