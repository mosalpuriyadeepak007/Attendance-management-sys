        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2>Faculty Details</h2>
                <button class="close-btn" onclick="closeModal('viewFacultyModal')"><span class="material-symbols-outlined">close</span></button>
            </div>
            <div class="faculty-profile">
                <div class="profile-header">
                    <div class="profile-avatar" id="viewAvatar">J</div>
                    <div class="profile-info">
                        <h3 id="viewName">John Smith</h3>
                        <p id="viewDesignation">Professor</p>
                        <span class="status-badge active" id="viewStatus">Active</span>
                    </div>
                </div>
                <div class="profile-details">
                    <div class="detail-group">
                        <span class="detail-label"><span class="material-symbols-outlined">badge</span> Faculty ID</span>
                        <span class="detail-value" id="viewId">FAC001</span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label"><span class="material-symbols-outlined">mail</span> Email</span>
                        <span class="detail-value" id="viewEmail">john.smith@college.edu</span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label"><span class="material-symbols-outlined">phone</span> Phone</span>
                        <span class="detail-value" id="viewPhone">+1 234 567 8901</span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label"><span class="material-symbols-outlined">domain</span> Department</span>
                        <span class="detail-value" id="viewDepartment">Computer Science</span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label"><span class="material-symbols-outlined">calendar_month</span> Joining Date</span>
                        <span class="detail-value" id="viewJoiningDate">Jan 15, 2020</span>
                    </div>
                    <div class="detail-group full-width">
                        <span class="detail-label"><span class="material-symbols-outlined">menu_book</span> Subjects</span>
                        <div class="subjects-list" id="viewSubjects">
                            <span class="subject-tag">Programming</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="closeModal('viewFacultyModal')">Close</button>
                <button type="button" class="btn-primary" onclick="closeModal('viewFacultyModal'); editFaculty(document.getElementById('viewId').textContent)">Edit Faculty</button>
            </div>
        </div>
    </div>

    <!-- Edit Faculty Modal -->
