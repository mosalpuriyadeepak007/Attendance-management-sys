<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/Styles.css">
    <link rel="stylesheet" href="/css/Dashboard.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="mainContainer">
        <%- include('partials/sidebar', { active: 'faculty' }) %>

        <div class="content">
            <div class="page-header">
                <div>
                    <h1>Faculty</h1>
                    <p class="breadcrumb"><a href="/">Home</a> / <a href="/faculty">Faculty</a></p>
                </div>
                <div class="header-actions">
                    <button class="btn-secondary"><span class="material-symbols-outlined">download</span> Export</button>
                    <button class="btn-primary" onclick="openModal('addFacultyModal')"><span class="material-symbols-outlined">person_add</span> Add Faculty</button>
                </div>
            </div>

            <!-- Stats Widgets -->
            <div class="dashboard-widgets">
                <div class="widget widget-blue">
                    <div class="widget-icon">
                        <span class="material-symbols-outlined">groups</span>
                    </div>
                    <div class="widget-info">
                        <h3>Total Faculty</h3>
                        <p class="widget-value"><%= faculty.length %></p>
                        <span class="widget-trend up"><span class="material-symbols-outlined">trending_up</span> Active Staff</span>
                    </div>
                </div>
                <div class="widget widget-green">
                    <div class="widget-icon">
                        <span class="material-symbols-outlined">domain</span>
                    </div>
                    <div class="widget-info">
                        <h3>Departments</h3>
                        <p class="widget-value"><%= [...new Set(faculty.map(f => f.department))].length %></p>
                        <span class="widget-trend">Covered</span>
                    </div>
                </div>
                <div class="widget widget-purple">
                    <div class="widget-icon">
                        <span class="material-symbols-outlined">verified</span>
                    </div>
                    <div class="widget-info">
                        <h3>Active</h3>
                        <p class="widget-value"><%= faculty.filter(f => f.status === 'active').length %></p>
                        <span class="widget-trend up"><span class="material-symbols-outlined">check_circle</span> Online</span>
                    </div>
                </div>
                <div class="widget widget-orange">
                    <div class="widget-icon">
                        <span class="material-symbols-outlined">schedule</span>
                    </div>
                    <div class="widget-info">
                        <h3>On Leave</h3>
                        <p class="widget-value"><%= faculty.filter(f => f.status === 'on-leave').length %></p>
                        <span class="widget-trend">This Month</span>
                    </div>
                </div>
            </div>

            <!-- Search and Filter Section -->
            <div class="filter-section">
                <div class="search-box">
                    <span class="material-symbols-outlined">search</span>
                    <input type="text" placeholder="Search faculty..." id="searchInput" onkeyup="filterTable()">
                </div>
                <div class="filter-group">
                    <select id="departmentFilter" onchange="filterTable()">
                        <option value="">All Departments</option>
                        <option value="Computer Science">Computer Science</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Mechanical">Mechanical</option>
                        <option value="Civil">Civil</option>
                        <option value="Mathematics">Mathematics</option>
                        <option value="Physics">Physics</option>
                    </select>
                    <select id="statusFilter" onchange="filterTable()">
                        <option value="">All Status</option>
                        <option value="active">Active</option>
                        <option value="on-leave">On Leave</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>

            <!-- Faculty Table -->
            <div class="table-container">
                <table class="data-table" id="facultyTable">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAll" onclick="toggleSelectAll()"></th>
                            <th>Faculty ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Subjects</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% faculty.forEach(function(member) { %>
                        <tr data-department="<%= member.department %>" data-status="<%= member.status %>">
                            <td><input type="checkbox" class="row-checkbox"></td>
                            <td><%= member.id %></td>
                            <td>
                                <div class="faculty-info">
                                    <div class="avatar" style="background: linear-gradient(135deg, <%= member.status === 'active' ? '#8b5cf6' : member.status === 'on-leave' ? '#f59e0b' : '#9ca3af' %> 0%, <%= member.status === 'active' ? '#6366f1' : member.status === 'on-leave' ? '#d97706' : '#6b7280' %> 100%);">
                                        <%= member.name.charAt(0) %>
                                    </div>
                                    <div class="faculty-details">
                                        <span class="faculty-name"><%= member.name %></span>
                                        <span class="faculty-phone"><%= member.phone %></span>
                                    </div>
                                </div>
                            </td>
                            <td><%= member.email %></td>
                            <td><span class="dept-badge"><%= member.department %></span></td>
                            <td><%= member.designation %></td>
                            <td>
                                <div class="subjects-list">
                                    <% member.subjects.slice(0, 2).forEach(function(subject) { %>
                                        <span class="subject-tag"><%= subject %></span>
                                    <% }); %>
                                    <% if (member.subjects.length > 2) { %>
                                        <span class="subject-tag more">+<%= member.subjects.length - 2 %></span>
                                    <% } %>
                                </div>
                            </td>
                            <td>
                                <span class="status-badge <%= member.status %>"><%= member.status.replace('-', ' ') %></span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-icon" title="View" onclick="viewFaculty('<%= member.id %>')"><span class="material-symbols-outlined">visibility</span></button>
                                    <button class="btn-icon" title="Edit" onclick="editFaculty('<%= member.id %>')"><span class="material-symbols-outlined">edit</span></button>
                                    <button class="btn-icon delete" title="Delete" onclick="deleteFaculty('<%= member.id %>')"><span class="material-symbols-outlined">delete</span></button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <span class="page-info">Showing 1-<%= Math.min(10, faculty.length) %> of <%= faculty.length %> faculty members</span>
                <div class="page-buttons">
                    <button class="page-btn" disabled><span class="material-symbols-outlined">chevron_left</span></button>
                    <button class="page-btn active">1</button>
                    <% if (faculty.length > 10) { %>
                    <button class="page-btn">2</button>
                    <% } %>
                    <% if (faculty.length > 20) { %>
                    <button class="page-btn">3</button>
                    <% } %>
                    <button class="page-btn"><span class="material-symbols-outlined">chevron_right</span></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Faculty Modal -->
    <div id="addFacultyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add New Faculty</h2>
                <button class="close-btn" onclick="closeModal('addFacultyModal')"><span class="material-symbols-outlined">close</span></button>
            </div>
            <form action="/faculty/add" method="POST">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="facultyId">Faculty ID</label>
                        <input type="text" id="facultyId" name="facultyId" placeholder="e.g., FAC006" required>
                    </div>
                    <div class="form-group">
                        <label for="facultyName">Full Name</label>
                        <input type="text" id="facultyName" name="facultyName" placeholder="Enter full name" required>
                    </div>
                    <div class="form-group">
                        <label for="facultyEmail">Email</label>
                        <input type="email" id="facultyEmail" name="facultyEmail" placeholder="email@college.edu" required>
                    </div>
                    <div class="form-group">
                        <label for="facultyPhone">Phone</label>
                        <input type="tel" id="facultyPhone" name="facultyPhone" placeholder="+1 234 567 8900">
                    </div>
                    <div class="form-group">
                        <label for="facultyDept">Department</label>
                        <select id="facultyDept" name="facultyDept" required>
                            <option value="">Select Department</option>
                            <option value="Computer Science">Computer Science</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Mechanical">Mechanical</option>
                            <option value="Civil">Civil</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Physics">Physics</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="facultyDesignation">Designation</label>
                        <select id="facultyDesignation" name="facultyDesignation" required>
                            <option value="">Select Designation</option>
                            <option value="Professor">Professor</option>
                            <option value="Associate Professor">Associate Professor</option>
                            <option value="Assistant Professor">Assistant Professor</option>
                            <option value="Lecturer">Lecturer</option>
                            <option value="Lab Instructor">Lab Instructor</option>
                        </select>
                    </div>
                    <div class="form-group full-width">
                        <label for="facultySubjects">Subjects (comma separated)</label>
                        <input type="text" id="facultySubjects" name="facultySubjects" placeholder="e.g., Data Structures, Algorithms, Database Systems">
                    </div>
                    <div class="form-group">
                        <label for="joiningDate">Joining Date</label>
                        <input type="date" id="joiningDate" name="joiningDate" required>
                    </div>
                    <div class="form-group">
                        <label for="facultyStatus">Status</label>
                        <select id="facultyStatus" name="facultyStatus" required>
                            <option value="active">Active</option>
                            <option value="on-leave">On Leave</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" onclick="closeModal('addFacultyModal')">Cancel</button>
                    <button type="submit" class="btn-primary">Add Faculty</button>
                </div>
            </form>
        </div>
    </div>

